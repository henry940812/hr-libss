{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}